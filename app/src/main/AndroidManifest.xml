<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtsan.tusmail">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TUSMail">
        <activity
            android:name=".MailboxActivity"
            android:label="@string/title_activity_mailbox"
            android:theme="@style/Theme.TUSMail.NoActionBar"></activity>
        <activity
            android:name=".PrivacyPolicy"
            android:label="@string/title_activity_privacy_policy"
            android:theme="@style/Theme.TUSMail.NoActionBar" />
        <activity
            android:name=".TUSMailSettingsActivity"
            android:label="@string/title_activity_t_u_s_mail_settings" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>